{
    "version": "1.1.1",
    "name": "CCCD HCC",
    "manifest_version": 3,
    "options_page": "popup.html",
    "action": {
        "default_icon": {
            "16": "16.png",
            "24": "32.png",
            "64": "64.png",
            "128": "128.png"
        },
        "default_popup": "" 
    },
    "background": {
        "service_worker": "background.js"
    },
    "chrome_url_overrides": {
        "newTab": "newTab.html"
    },
    "host_permissions": [
        "https://hanhchinhcong.vnpost.vn/giaodich/xac-nhan-all*"
    ],
    "permissions": [
        "tabs",
        "scripting",
        "bookmarks",
        "unlimitedStorage",
        "notifications",
        "storage",
        "cookies"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "injected.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_security_policy": {
        "content_security_policy": {
            "extension_pages": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com; object-src 'self'; connect-src 'self' https://*.firebaseio.com;"
        }
    }
}