{
    "version": "1.1.1",
    "name": "CCCD App",
    "manifest_version": 3,
    
    "options_page": "popup.html",
    "background": {
        "service_worker": "background.js"
    },
    "chrome_url_overrides": {
        "newTab": "newTab.html"
    },
    "host_permissions": [
        "https:/cccd.vnpost.vn/*"
    ],
    "permissions": [
        "tabs",
        "bookmarks",
        "unlimitedStorage",
        "notifications",
        "storage",
        "cookies"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ]
        }
       
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}